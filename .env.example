# Root environment template for local development.
# Copy to `.env` and fill values as needed.

# Core app
APP_ENV=development
APP_NAME=elara-nexus-backend
APP_AUTH_TOKEN=local-dev-token
APP_CORS_ORIGINS=http://localhost:3000
APP_REQUEST_TIMEOUT_SECONDS=10.0
APP_MAX_REQUEST_BODY_BYTES=1000000
APP_RATE_LIMIT_WINDOW_SECONDS=60
APP_RATE_LIMIT_REQUESTS_PER_IP=120
APP_RATE_LIMIT_REQUESTS_PER_TOKEN=240

# Database
APP_DB_ENGINE=sqlite
APP_DB_URL=sqlite:///./data/elara_nexus.db
APP_VECTOR_DIMENSIONS=8

# LiteLLM routing
LITELLM_BASE_URL=
LITELLM_API_KEY=
LITELLM_MODEL=gpt-4o-mini

# Langfuse tracing
LANGFUSE_HOST=
LANGFUSE_PUBLIC_KEY=
LANGFUSE_SECRET_KEY=

# Optional tooling keys (only if framework memory scripts are used)
OPENAI_API_KEY=
HELICONE_API_KEY=
